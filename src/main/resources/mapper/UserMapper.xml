<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.upimage.upimg.mapper.UserMapper">
    <select id="findAll" resultType="com.upimage.upimg.entity.User">
        SELECT * FROM user
    </select>

    <!--    添加-->
    <insert id="userinsert" parameterType="com.upimage.upimg.entity.User" useGeneratedKeys="true" keyProperty="user_id">
        insert into user(user_id,user_head,user_name,user_number,age,sex,created_at,updated_at,pass_word) value (#{user_id},#{user_head},#{user_name},#{user_number},#{age},#{sex},#{created_at},#{updated_at},#{pass_word});
    </insert>

    <!--  查询  -->
    <select id="userselect" parameterType="com.upimage.upimg.entity.User" resultType="com.upimage.upimg.entity.User">
        select * from user
        <if test="user_number != null">
            where user_number=#{user_number}
        </if>
    </select>

</mapper>